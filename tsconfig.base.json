{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "esnext",
		"lib": ["esnext"],
		"types": ["node", "jest"],
		"outDir": ".build",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true
	}
}
